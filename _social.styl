.social-bar
	background: rgba(lgm-purple,1)
	transition: anime
	position: fixed
	min-height: header-height
	border-bottom: 0px solid lgm-purple-dkr
	box-shadow: 0 0 8px rgba(black,.5)
	top: 0
	width: 100%
	z-index: 9999
	.menu-icon
		margin: 17px 0 0 0
		float: left
		display: block
	.logo-for-small
		float: right
	.svg-logo-lagom-reverse
		height: 30px
		margin-top: 8px
		display: block
	@media screen and (min-width: 40em)
		background: rgba(lgm-purple,0)
		transition: anime
		position: relative
		border-bottom: 0px solid lgm-purple-dkr
		box-shadow: 0 0 8px rgba(black,0)
		top: 0
		width: 100%
		z-index: 9999
		.svg-logo-lagom-reverse
			float: left
			display: none
	&.stuck
		background: rgba(lgm-purple,1)
		transition: anime
		position: fixed
		border-bottom: 0px solid lgm-purple-dkr
		box-shadow: 0 0 8px rgba(black,.5)
		top: 0
		left: 0
		width: 100%
		z-index: 9999
		.social
			display: none
			padding: 10px 0 10px 0
		.sections-scroll
			display: block
		.svg-logo-lagom-reverse
			display: block
		@media screen and (min-width: 63em)
			.social
				display: block

.sections-scroll
	display: none
	float: right
	a
		color: white
		text-transform: uppercase
		margin: 0 5px
		line-height: 38px
		padding: 5px
		display: inline-block
		&:hover
			color: lgm-purple-ltr
.social
	float: right
	margin-left: 15px
	padding: 15px 0 15px 0
	social(pos)
		background-position: ((pos * -1) * 30px) 0
		&:hover
			background-position: ((pos * -1) * 30px) -30px
	a
		position: relative
		display: block
		width: 32px
		height: 32px
		float: left
		background: transparent url("images/ui/social-icons.png") no-repeat
		background-size: 180px
		&[href*=twitter]
			social(0)
		&[href*=google]
			social(1)
		&[href*=facebook]
			social(2)
		&[href*=github]
			social(3)
		&[href*=stackoverflow]
			social(4)
		&[href*=forum]
			social(5)

		span
			display: none
			position: absolute
			bottom: -25px
			right: 0
			padding: 3px 6px
			background: lb-slate
			color: white
			border-radius: 3px
			font-size: 0.75em
			text-transform: uppercase
			white-space: nowrap
			font-weight: 700
			&:after
				content: " "
				position: absolute
				bottom: 100%
				right: 11px
				width: 0
				height: 0
				border-left: 6px solid transparent
				border-right: 6px solid transparent
				border-bottom: 6px solid lb-slate
		&:hover span
			display: block